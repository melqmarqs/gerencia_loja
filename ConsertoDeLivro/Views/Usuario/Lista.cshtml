@*@model IEnumerable<ConsertoDeLivro.Models.Usuario>*@
@{
    ViewBag.Title = "Usuários";
}

@Styles.Render("~/Content/FormsTelas.css")
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>

<script src="~/Scripts/usuarios.js" type="text/javascript"></script>

<div class="divForm">
    <label class="lblTitulo">@ViewBag.Title</label>
    <hr />
    <div class="divCentral">
        <table id="tabelaUsuario" class="display" style="width: 100%">
            <thead>
                <tr class="linhaTitulo">
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>CPF</th>
                    <th>Celular</th>
                    <th>Adm</th>
                    <th>Dev</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <br />
        <div>
            @Html.ActionLink("Voltar", "Index", "ConsertoDeLivro", null, new { @class = "btn btn-warning" })
            @Html.ActionLink("Novo usuário", "Criar", "Usuario", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>