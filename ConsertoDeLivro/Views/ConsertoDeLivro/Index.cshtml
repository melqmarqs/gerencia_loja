
@{
    ViewBag.Title = DateTime.Now.ToString("dddd");
}

<style>
    .divOrc {
        height: 100%;
        width: 100%;
        font-size: 1.5em;
        padding: 5px 0;
    }

    .aOrcamento {
        margin-bottom: 5px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        height: 50px;
        width: 100%;
        color: green;
        box-sizing: border-box;
        border-radius: 10px;
        border: 1px solid darkgreen;
    }

    .aOrcamento:hover {
        text-decoration: none;
        color: darkgreen;
        background-color: rgba(60, 255, 60, 0.2);
    }

    .carousel-item img {
        height: 500px;
        border-radius: 10px;
    }
</style>

<div class="divOrc">
    <a class="aOrcamento" href="@Url.Action("CriarNovoPedido", "Pedido")">Faça o seu orçamento</a>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/imagem1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/imagem2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/imagem3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>