
@{
    ViewBag.Title = DateTime.Now.ToString("dddd");
}

<style>
    .divOrc {
        height: 100%;
        width: 100%;
        font-size: 1.5em;
        padding: 5px 0;
    }

    .aOrcamento {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        height: 50px;
        width: 100%;
        color: green;
        box-sizing: border-box;
        border-radius: 10px;
        border: 1px solid darkgreen;
    }

        .aOrcamento:hover {
            color: darkgreen;
            background-color: rgba(60, 255, 60, 0.2);
        }
</style>

<div class="divOrc">
    <a class="aOrcamento" href="@Url.Action("CriarNovoPedido", "Pedido")">Faça o seu orçamento</a>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img height="500" style="border-radius: 10px" class="d-block w-100" src="~/Images/bg1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img height="500" style="border-radius: 10px" class="d-block w-100" src="~/Images/bg2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img height="500" style="border-radius: 10px" class="d-block w-100" src="~/Images/bg3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>