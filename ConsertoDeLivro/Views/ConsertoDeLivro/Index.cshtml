
@{
    ViewBag.Title = DateTime.Now.ToString("dddd");
}

<style>
    .divOrc {
        height: 100%;
        width: 100%;
        font-size: 1.5em;
        padding: 5px 0;
    }

    .aOrcamento {
        margin-bottom: 5px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        height: 50px;
        width: 100%;
        color: green;
        box-sizing: border-box;
        border-radius: 10px;
        border: 1px solid darkgreen;
    }

    .aOrcamento:hover {
        text-decoration: none;
        color: darkgreen;
        background-color: rgba(60, 255, 60, 0.2);
    }

    .aOrcamento:focus {
        text-decoration: none;
        color: darkgreen;
    }

    .item img {
        height: 500px;
    }
</style>

<div class="divOrc">
    <a class="aOrcamento" href="@Url.Action("CriarNovoPedido", "Pedido")">Faça o seu orçamento</a>

    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block w-100" src="~/Images/imagem1.png" alt="First slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/Images/imagem2.png" alt="Second slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="~/Images/imagem3.png" alt="Third slide">
            </div>
        </div>

        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

</div>