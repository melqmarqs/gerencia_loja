
@{
    ViewBag.Title = DateTime.Now.ToString("dddd");
}

<style>
    .divOrc {
        height: 50px;
        width: 100%;
        font-size: 1.5em;
        padding: 5px 0;
    }

    .divOrc, .divOrc a {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .divOrc a {
        text-decoration: none;
        height: 100%;
        width: 100%;
        color: green;
        box-sizing: border-box;
        border-radius: 10px;
        border: 1px solid darkgreen;
    }

    .divOrc a:hover {
        color: darkgreen;
        background-color: rgba(60, 255, 60, 0.2);
    }
</style>

<div class="divOrc">
    <a href="@Url.Action("CriarNovoPedido", "Pedido")">Faça o seu orçamento</a>
</div>