@model IEnumerable<ConsertoDeLivro.Models.Material>
@{
    ViewBag.Title = "Lista de Materiais";
}

@Styles.Render("~/Content/FormsTelas.css")

<h2>@ViewBag.Title</h2>

@if (Model != null) {
    <table>
        <tr class="linhaTitulo">
            <th>
                <span>ID</span>
            </th>
            <th>
                <span>Nome</span>
            </th>
            <th>
                <span>Descrição</span>
            </th>
            <th>
                <span>Opções</span>
            </th>
        </tr>
        @foreach (var item in Model) {
            <tr class="linhaConteudo">
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Descricao)
                </td>
                <td>
                    <a href="@Url.Action("AtualizarMaterial", "Material", new { id = item.Id })">Editar</a> |
                    @Html.ActionLink("Apagar", "ApagarMaterial", "Material", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </table>
}
<br />
<div>
    @Html.ActionLink("Voltar", "Index", "ConsertoDeLivro", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Novo material", "CriarMaterial", "Material", null, new { @class = "btn btn-success" })
</div>